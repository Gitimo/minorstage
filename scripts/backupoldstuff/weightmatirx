# Generic weights matrix
for m=1:8000
	if (ir1(m)!=0)
	wir1(m)=0.001/ir1(m);
	else
	wir1(m)=0.001/(0.5*(ir1(m-1)+ir1(m+1)));
	end
	if (ir2(m)!=0)
	wir2(m)=0.001/ir2(m);
	else
	wir2(m)=0.001/(0.5*(ir2(m-1)+ir2(m+1)));
	end
	if (it1(m)!=0)
	wit1(m)=0.001/it1(m);
	else
	wit1(m)=0.001/(0.5*(it1(m-1)+it1(m+1)));
	end
end

